{% extends 'base.html.twig' %}
{% block title %}Sport{% endblock %}

{% block body %}
    <h2>Sport</h2>
    <div class="listCategory">
        <div class="headlines">
            <div class="first">
                {% for Quizz in SportQuizz|slice(0, 1) %}
                <div>
                <a href="{{ path('show_quizz', {id: Quizz.id}) }}">
                    <img src="../../bundles/acmedemo/images/{{ Quizz.img }}" alt="{{ Quizz.titre }}">
                    <div>
                    <p class="categorieInfo">{{ Quizz.categorie }}</p>
                    <p class="QuizzName">{{ Quizz.titre }}</p></div>
                </a>
            </div>
            {% endfor %}
            
            </div>
            <div class="side">
                {% for Quizz in SportQuizz|slice(1, 2) %}
                <div>
                    <div>
                <a href="{{ path('show_quizz', {id: Quizz.id}) }}">
                    <img src="../../bundles/acmedemo/images/{{ Quizz.img }}" alt="{{ Quizz.titre }}">
                    <div>
                    <p class="categorieInfo">{{ Quizz.categorie }}</p>
                    <p class="QuizzName">{{ Quizz.titre[:16] }}</p></div>
                </a>
            </div>
                </div>
                
            {% endfor %}
            </div>
        </div>
        <ul>
            {% for Quizz in SportQuizz[3:]|slice(0, 20) %}
            <li>
                <a href="{{ path('show_quizz', {id: Quizz.id}) }}">
                    <img src="../../bundles/acmedemo/images/{{ Quizz.img }}" alt="{{ Quizz.titre }}">
                    <div>
                    <p class="categorieInfo">{{ Quizz.categorie }}</p>
                    <p class="QuizzName">{{ Quizz.titre }}</p></div>
                </a>
            </li>
        {% endfor %}
        
        </ul>
    </div>
    
{% endblock %}

