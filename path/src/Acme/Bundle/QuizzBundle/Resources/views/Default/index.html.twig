{% extends 'base.html.twig' %}


{% block body %}
    <div class="lastQuizz">
        <h2>Les derniers quizz</h2>
        <ul>
            {% for Quizz in RecentQuizz %}
            <li>
                <a href="{{ path('show_quizz', {id: Quizz.id}) }}">
                    <img src="../bundles/acmedemo/images/{{ Quizz.img }}" alt="{{ Quizz.titre }}">
                    <div>
                    <p class="categorieInfo">{{ Quizz.categorie }}</p>
                    <p class="QuizzName">{{ Quizz.titre }}</p></div>
                </a>
            </li>
        {% endfor %}
        
        </ul>
    </div>
    <div class="topQuizz">
        <h2>Les meilleurs quizz</h2>
        <ul>
            {% for Quizz in TopQuizz %}
            <li>
                <a href="{{ path('show_quizz', {id: Quizz.id}) }}">
                    <img src="../bundles/acmedemo/images/{{ Quizz.img }}" alt="{{ Quizz.titre }}">
                    <div>
                    <p class="categorieInfo">{{ Quizz.categorie }}</p>
                    <p class="QuizzName">{{ Quizz.titre }}</p></div>
                </a>
            </li>
        {% endfor %}
        
        </ul>
    </div>
{% endblock %}



