    <span>Score High-Tech : </span>{{ app.user.scorehightech }}<br />
{% endif %}

<a class="log deconnexion" href="{{ path('fos_user_security_logout') }}">Déconnexion</a><br/><br/><br/><br/><br/>
<a class="edit" href="{{ path('modificationProfil') }}"><h5>Modifier le profil</h5></a>

{% else %}
