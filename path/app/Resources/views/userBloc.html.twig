<section class="profil">

{% if app.user %}
    {% if app.user.picture is not null %}
    <img id="picture" src="{{ asset(app.user.getWebPath()) }}" width="150" height="100" /><br />
    {% endif %}

<p>{{ app.user.username }}</p><br>

{# {% if app.user.picture is not empty %}
	<img src="../bundles/acmedemo/images/{{ picture.img }}" alt="{{ picture.titre }}" />
{% endif %} #}

{% if app.user.scoredivertissements is not empty %}
    <span>Score Divertissement : </span>{{ app.user.scoredivertissements }}<br />
{% endif %}

{% if app.user.scoresport is not empty %}
    <span>Score Sport : </span>{{ app.user.scoresport }}<br />
{% endif %}

{% if app.user.scorepolitique is not empty %}
    <span>Score Politique : </span>{{ app.user.scorepolitique }}<br />
{% endif %}

