{% endif %}

{% if app.user.scorenature is not empty %}
    <span>Score Nature : </span>{{ app.user.scorenature }}<br />
{% endif %}

{% if app.user.scoresante is not empty %}
    <span>Score Santé : </span>{{ app.user.scoresante }}<br />
{% endif %}

